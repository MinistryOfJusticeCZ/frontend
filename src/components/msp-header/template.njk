<header class="msp-header {{- ' ' + params.classes if params.classes}}" role="banner">

  <div class="msp-header__container{% if params.containerClasses %} {{ params.containerClasses }}{% endif %}">

    <div class="msp-header__logo">
      <a class="msp-header__link" href="{{ params.service.url | default('/') }}">{{ params.service.name }}</a>
    </div>

    {% if params.navigation %}
      <div class="msp-header__content">

        <nav class="msp-header__navigation{% if params.navigation.classes %} {{ params.navigation.classes }}{% endif %}"{% if (params.navigation.label) %} aria-label="{{ params.navigation.label }}" {% endif %}>

          <ul class="msp-header__navigation-list">

            {% for item in params.navigation.items %}
              <li class="msp-header__navigation-item">
                <a class="msp-header__navigation-link" href="{{ item.href }}" {{ 'aria-current="page"' | safe if item.active }}>
                  {{ item.html | safe if item.html else item.text }}
                </a>
              </li>
            {% endfor %}

          </ul>

        </nav>

      </div>
    {% endif %}

  </div>

</header>