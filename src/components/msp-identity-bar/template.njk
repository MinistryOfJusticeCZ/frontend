{%- from "msp-menu/macro.njk" import mspMenu %}

<div class="msp-identity-bar {{- ' ' + params.classes if params.classes}}">

  <div class="msp-identity-bar__container">

    <div class="msp-identity-bar__details">
      {% if params.title %}
        <span class="msp-identity-bar__title">{{ params.title.html | safe if params.title.html else params.title.text }}</span>
      {% endif %}
    </div>

    {% if params.menus %}
      <div class="msp-identity-bar__actions">
        {% for menu in params.menus %}
          <div class="msp-identity-bar__menu">
            {{mspMenu({ items: menu.items, classes: menu.classes })}}
          </div>
        {% endfor %}
      </div>
    {% endif %}

  </div>

</div>