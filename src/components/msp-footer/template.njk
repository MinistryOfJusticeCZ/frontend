<footer class="msp-footer {{- ' ' + params.classes if params.classes}}" role="contentinfo">

  <div class="msp-footer__container {{- ' ' + params.containerClasses if params.containerClasses}}">

    {% if params.help %}
    <h2 class="msp-footer__heading">{{params.help.heading}}</h2>
    <ul class="msp-footer__list">
      {% if params.help.email %}<li class="msp-footer__list-item">E-mail: <a class="msp-footer__link" href="mailto:{{ params.help.email.address }}">{{ params.help.email.html | safe if params.help.email.html else params.help.email.text }}</a></li>{% endif %}
      {% if params.help.phone %}<li class="msp-footer__list-item">Telefon: {{ params.help.phone.html | safe if params.help.phone.html else params.help.phone.text }}</li>{% endif %}
      {% if params.help.opening %}<li class="msp-footer__list-item"><span class="visually-hidden">Otevírací doba: </span>{{ params.help.opening.html | safe if params.help.opening.html else params.help.opening.text }}</li>{% endif %}
    </ul>
    {% endif %}

    <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

    {% if params.navigation %}
    <ul class="msp-footer__list msp-footer__list--inline">
     
      {% for item in params.navigation.items %}
      <li class="msp-footer__list-item">
        <a class="msp-footer__link" href="{{ item.href }}">{{ item.html | safe if item.html else item.text }}</a>
      </li>
      {% endfor %}

    </ul>
    {% endif %}

  </div>

</footer>