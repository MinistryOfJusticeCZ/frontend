{%- from "button/macro.njk" import govukButton %}

<div class="msp-menu {{- ' ' + params.classes if params.classes}}">
  <div class="msp-menu__wrapper">
    {% for item in params.items %}
      {{ govukButton({
        classes: 'msp-menu__item ' + (item.classes if item.classes) + ' ' + (params.buttonClasses if params.buttonClasses),
        text: item.text,
        href: item.href
      }) }}
    {% endfor %}
  </div>
</div>

