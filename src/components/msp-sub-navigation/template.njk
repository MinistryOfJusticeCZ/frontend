<nav class="msp-sub-navigation {{- ' ' + params.classes if params.classes}}"{% if (params.label) %} aria-label="{{ params.label }}"{% endif %}>

  <ul class="msp-sub-navigation__list">

    {% for item in params.items %}
      <li class="msp-sub-navigation__item">
        <a class="msp-sub-navigation__link" {{ 'aria-current="page"' | safe if item.active }} href="{{ item.href }}">
          {{ item.html | safe if item.html else item.text }}
        </a>
      </li>
    {% endfor %}

  </ul>

</nav>